@model Helpdesk.WebUI.Models.Requests.RequestCreateViewModel

@{
    ViewBag.Title = "Utwórz zgłoszenie";
}

<h2>Utwórz zgłoszenie</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ComputerID)
        <div class="form-group">
            <label class="control-label col-md-2">Klient</label>
            <div class="col-md-10">@Model.Computer.Owner.Name</div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Komputer</label>
            <div class="col-md-10">@Model.Computer.Name</div>
        </div>
        <div class="form-group">
            <label class = "control-label col-md-2">Komentarz</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", style = "resize: none", rows = 4 })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

