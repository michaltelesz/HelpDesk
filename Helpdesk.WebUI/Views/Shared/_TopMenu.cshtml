@model  Helpdesk.WebUI.Models.Shared.MenuViewModel

<ul class="nav navbar-nav navbar-right">
    @{
        if (Model.IsAuthenticated)
        {
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello, @User.Identity.Name <span class="caret" /></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("My Account", "Details", "Account")</li>

                    @if (Model.IsCustomer)
                    {
                        <li role="separator" class="divider"></li>
                        <li class="dropdown-header">Customer</li>
                        <li>@Html.ActionLink("Customer profile", "Details", "Customers", new { id = Model.CustomerId }, null)</li>
                        <li>@Html.ActionLink("My Requests", "CustomerIndex", "Requests")</li>
                    }

                    @if (Model.IsConsultant)
                    {
                        <li role="separator" class="divider"></li>
                        <li class="dropdown-header">Consultant</li>
                        <li>@Html.ActionLink("My Requests", "ConsultantIndex", "Requests")</li>
                    }

                    @if (Model.IsAdmin)
                    {
                        <li role="separator" class="divider"></li>
                        <li class="dropdown-header">Admin</li>
                        <li><a href="#">Separated link</a></li>
                    }
                </ul>
            </li>
            <li>
                @Html.ActionLink("Logout", "Logout", "Account")
            </li>
        }
        else
        {
            <li>
                @Html.ActionLink("Register", "Register", "Account")
            </li>
            <li>
                @Html.ActionLink("Login", "Login", "Account")
            </li>
        }
    }
</ul>
